{
  "name": "calibri",
  "scripts": {
    "start": "npm run watch",
    "watch": "watchify -s ChatWidget widget/js/calibri.widget.js -o widget/bundle.js -d",
    "build:prod": "browserify -s ChatWidget widget/js/calibri.widget.js | uglifyjs > widget/bundle.min.js"
  },
  "browserify": {
    "transform": [
      [
        "jsrender/tmplify"
      ]
    ]
  },
  "dependencies": {
    "jsrender": "^0.9.83"
  },
  "devDependencies": {
    "browserify": "^14.0.0",
    "uglify-js": "^2.7.5",
    "watchify": "^3.9.0"
  }
}
